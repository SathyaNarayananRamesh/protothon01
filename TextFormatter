p = input("Enter your sentence: ")
words = p.split()
wordCount = len(words)
print ("The word count is:", wordCount)
print("The Sentence in UPPERCASE is:")
print(p.upper())
print("The Sentence in lowercase is:")
print(p.lower())
print("The Sentence in TitleCase is:")
print(p.title())
print("The Sentence in Startcase is:")
print(p.capitalize())
